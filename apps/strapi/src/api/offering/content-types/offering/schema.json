{
  "kind": "collectionType",
  "collectionName": "offerings",
  "info": {
    "singularName": "offering",
    "pluralName": "offerings",
    "displayName": "Offering",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true,
      "minLength": 50
    },
    "starting_date": {
      "type": "date"
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "active",
        "suspended",
        "finished"
      ]
    },
    "event_info": {
      "type": "text"
    },
    "squared_image": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "ending_date": {
      "type": "date"
    },
    "starting_time": {
      "type": "time"
    },
    "ending_time": {
      "type": "time"
    },
    "instructors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::instructor.instructor",
      "inversedBy": "offerings"
    }
  }
}
